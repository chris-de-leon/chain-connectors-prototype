{
  "tasks": {
    "eth:source:build": "deno compile --allow-all --output ./bin/eth ./src/apps/connectors/eth/main.ts",
    "eth:source:start": "deno run --allow-all ./src/apps/connectors/eth/main.ts",
    "dev:compose:reset": "deno run dev:compose:down && deno run dev:compose:up",
    "dev:compose:down": "docker compose down --remove-orphans",
    "dev:compose:up": "docker compose up -d --build"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@1.0.7",
    "@std/collections": "jsr:@std/collections@1.0.9",
    "ethers": "npm:ethers@6.13.4",
    "ioredis": "npm:ioredis@5.4.1",
    "zod": "npm:zod@3.23.8"
  },
  "fmt": {
    "semiColons": false
  }
}
